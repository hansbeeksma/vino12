# VINO12 - Environment Variables
# Copy to .env.local and fill in values
#
# OTAP Environments:
#   O (Ontwikkeling) = localhost:3000 (this file)
#   TA (Test/Acceptatie) = staging.vino12.com (Vercel Preview env vars)
#   P (Productie) = vino12.com (Vercel Production env vars)

# ===================
# Supabase
# O: local supabase (supabase start)
# TA: staging project URL
# P: production project URL
# ===================
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# ===================
# Mollie (Payment)
# O/TA: test_* key (test mode)
# P: live_* key (live mode)
# ===================
MOLLIE_API_KEY=
MOLLIE_WEBHOOK_SECRET=
NEXT_PUBLIC_MOLLIE_PROFILE_ID=

# ===================
# Resend (Email)
# O/TA: test@vino12.com
# P: bestelling@vino12.com
# ===================
RESEND_API_KEY=
RESEND_FROM_EMAIL=bestelling@vino12.com

# ===================
# Upstash Redis (Cache)
# ===================
UPSTASH_REDIS_REST_URL=https://your-redis.upstash.io
UPSTASH_REDIS_REST_TOKEN=your-redis-token

# ===================
# Sentry (Monitoring)
# O: development | TA: staging | P: production
# ===================
NEXT_PUBLIC_SENTRY_DSN=https://your-dsn@sentry.io/project
SENTRY_ORG=your-org
SENTRY_PROJECT=vino12
SENTRY_AUTH_TOKEN=your-auth-token
SENTRY_ENVIRONMENT=development

# ===================
# WhatsApp Business (Ideas Pipeline)
# ===================
WHATSAPP_VERIFY_TOKEN=
WHATSAPP_ACCESS_TOKEN=
WHATSAPP_PHONE_NUMBER_ID=
WHATSAPP_BUSINESS_ACCOUNT_ID=

# ===================
# AI (Ideas Pipeline)
# ===================
ANTHROPIC_API_KEY=
PERPLEXITY_API_KEY=

# ===================
# Admin Access
# ===================
ADMIN_EMAILS=
CONTRIBUTOR_EMAILS=

# ===================
# Internal API
# ===================
INTERNAL_API_KEY=

# ===================
# Vercel Cron
# Auto-set in Vercel, generate locally: openssl rand -hex 32
# ===================
CRON_SECRET=

# ===================
# Daily Insights (AI email digest)
# Comma-separated list of stakeholder emails
# ===================
INSIGHT_RECIPIENTS=

# ===================
# App Configuration
# O: http://localhost:3000
# TA: https://staging.vino12.com
# P: https://vino12.com
# ===================
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_NAME=VINO12

# ===================
# Gorse (Recommendation Engine)
# ===================
GORSE_API_URL=http://localhost:8087
GORSE_API_KEY=
GORSE_POSTGRES_DB=gorse
GORSE_POSTGRES_USER=gorse
GORSE_POSTGRES_PASSWORD=
GORSE_DASHBOARD_USER=admin
GORSE_DASHBOARD_PASSWORD=
GORSE_WORKER_JOBS=2

# ===================
# Typesense (Search)
# ===================
TYPESENSE_HOST=localhost
TYPESENSE_PORT=8108
TYPESENSE_API_KEY=
TYPESENSE_PROTOCOL=http

# ===================
# GrowthBook (A/B Testing & Feature Flags)
# O: http://localhost:3100 (Docker)
# TA/P: https://growthbook.vino12.com
# ===================
NEXT_PUBLIC_GROWTHBOOK_API_HOST=http://localhost:3101
NEXT_PUBLIC_GROWTHBOOK_CLIENT_KEY=

# ===================
# Wine Traceability (Digital Passport)
# Generate key: openssl rand -hex 32
# ===================
TRACEABILITY_SIGNING_KEY=

# ===================
# OpenAI (Voice Transcription)
# Optional: Whisper API fallback for speech-to-text
# ===================
OPENAI_API_KEY=

# ===================
# Plausible Analytics (GDPR-compliant, cookieless)
# O: leave empty (disabled locally)
# TA: staging.vino12.com
# P: vino12.com
# ===================
NEXT_PUBLIC_PLAUSIBLE_DOMAIN=

# ===================
# Vercel (auto-populated)
# NEXT_PUBLIC_VERCEL_ENV: development | preview | production
# ===================
# VERCEL_URL is auto-set by Vercel
